<div class="section">
  <div class="row">
    <h4>Add a new user to <%= @project.name %></h4>

    <%= form_tag add_user_project_path, remote: true do %>
      <div class="row">
        <div class="input-field col s12">
          <%= text_field_tag :email, nil, placeholder: 'email@address.com' %>
        </div>
      </div>

      <div class="row">
        <div class="action-field col s12">
          <%= button_tag class: 'btn waves-effect waves-light' do %>
            Add User
            <i class="mdi-content-send right"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
