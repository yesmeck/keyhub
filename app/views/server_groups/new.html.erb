<div class="section">
  <div class="row">
    <h4>Create Server Group</h4>

    <%= form_for [@project, @server_group], remote: true do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :name %>
          <%= f.label :name %>
        </div>
      </div>

      <div class="row">
        <div class="action-field col s12">
          <%= button_tag class: 'btn waves-effect waves-light' do %>
            Create
            <i class="mdi-content-send right"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
