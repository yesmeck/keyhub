<div class="section">
  <div class="row">
    <h4>Projects</h4>

    <ul id="projects" class="col s12 collection">
      <%= render @projects %>
    </ul>

    <%= form_for Project.new, remote: true do |f| %>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :name %>
          <%= f.label :name %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <%= f.button class: 'btn waves-effect waves-light' do %>
            Create Project
            <i class="mdi-content-send right"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
